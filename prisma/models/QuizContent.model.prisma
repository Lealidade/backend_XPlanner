model QuizContent {
  id                 String   @id @default(cuid())
  questionText       String
  options            String[] // array de alternativas
  correctAnswerIndex Int // índice da correta dentro de options
  explanation        String? // texto explicando a resposta
  xpPointsReward     Int
  xpCoinsReward      Int      @default(0)

  // se quiser, depois podemos criar relações com outros modos de jogo (Quiz Battle, etc.)
  learningStep LearningStep?
}
