model UserXP {
  id     String @id @default(cuid())
  userId String @unique

  userBetter User @relation(fields: [userId], references: [id], onDelete: Cascade)

  username  String?
  birthYear Int?

  avatarUrl      String?
  totalXp        Int     @default(0)
  currentLevel   String  @default("Money Rookie")
  xpToNextLevel  Int     @default(100)
  dayStreak      Int     @default(0)
  xpCoinsBalance Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  financialProfile      FinancialProfile?
  learningStepsProgress UserLearningStepProgress[]
  userGoals             UserGoal[]
  challengesProgress    UserChallengeProgress[]
  badges                UserBadge[]

  cashFlows CashFlow[]
}
