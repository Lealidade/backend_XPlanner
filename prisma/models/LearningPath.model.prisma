model LearningPath {
  id          String @id @default(cuid())
  slug        String @unique
  title       String
  description String

  dimension FinancialDimension

  level            LearningPathLevel @default(BASIC)
  estimatedMinutes Int?
  imageUrl         String?
  totalSteps       Int?
  isActive         Boolean           @default(true)
  order            Int               @default(0)

  steps LearningStep[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
