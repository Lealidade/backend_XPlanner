  date DateTime @default(now())

  operation CashFlowOperation
  value     Int // pra hackaton, inteiro (pode ser "reais" ou "centavos")
  label     String // ex: "Sal√°rio XP", "Mercado", "Dep√≥sito meta Jap√£o"
