model CashFlow {
  id String @id @default(cuid())

  userXPId String
  userXP   UserXP @relation(fields: [userXPId], references: [id], onDelete: Cascade)

  userGoalId String?
  userGoal   UserGoal? @relation(fields: [userGoalId], references: [id])

  date DateTime @default(now())

  operation CashFlowOperation
  value     Int
  label     String
  category  String
  recipient String?

  createdAt DateTime @default(now())
}
