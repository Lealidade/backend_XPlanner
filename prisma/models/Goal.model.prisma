model Goal {
  id          String @id @default(cuid())
  title       String
  description String

  type      GoalType
  riskLevel RiskLevel

  dimension FinancialDimension

  category String?

  recommendedProducts String[]
  iconUrl             String?

  xpPointsRewardOnCompletion Int @default(100)
  xpCoinsRewardOnCompletion  Int @default(0)

  userGoals UserGoal[]
}
